<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data></data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_intro_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_top_category"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/bvc_666E89"
                android:textSize="@dimen/text_size_12"
                android:textStyle="normal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="메뉴" />

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_top_category"
                android:layout_width="0dp"
                android:layout_height="4dp"
                android:layout_marginTop="@dimen/d_700"
                android:layout_marginBottom="@dimen/d_100"
                android:background="@color/bvc_666E89"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/tv_top_category"
                app:layout_constraintStart_toStartOf="@+id/tv_top_category"
                app:layout_constraintTop_toBottomOf="@+id/tv_top_category" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>