<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:gravity="center">

    <LinearLayout
        android:background="@drawable/tab_background_selector"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <androidx.appcompat.widget.AppCompatImageView
            android:tint="@color/bvc_666E89"
            android:layout_margin="@dimen/d_1800"
            android:src="@drawable/tab_order"
            android:id="@+id/tab_icon"
            app:tint="@color/tab_icon_tint_selector"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>


    <androidx.appcompat.widget.AppCompatTextView
        android:layout_marginTop="@dimen/d_600"
        tools:text="aaaa"
        android:id="@+id/tab_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textStyle="normal"
        android:textColor="@color/bvc_666E89"
        android:textSize="@dimen/text_size_10" />
</LinearLayout>