<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_grid"
            android:layout_width="match_parent"
            android:layout_height="@dimen/d_10500"
            android:background="@drawable/r12_00000000"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/iv_grid"
                android:layout_width="match_parent"
                android:layout_height="match_parent" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_grid_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/d_1000"
                android:ellipsize="end"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                android:textStyle="bold"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/d_700"
                app:layout_constraintBottom_toTopOf="@+id/tv_grid_desc"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="@+id/tv_grid_desc"
                tools:text="메뉴" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tv_grid_desc"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/d_1000"
                android:layout_marginEnd="@dimen/d_1000"
                android:maxLines="1"
                android:layout_marginBottom="@dimen/d_1000"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_10"
                android:textStyle="normal"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="메뉴" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>